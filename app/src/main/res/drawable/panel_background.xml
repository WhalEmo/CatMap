<!-- res/drawable/rounded_panel_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <solid android:color="#FFF3E0" /> <!-- Panelin arka plan rengi -->
    <corners android:radius="24dp" /> <!-- Yuvarlaklık miktarı -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- İsteğe bağlı çerçeve -->
</shape>

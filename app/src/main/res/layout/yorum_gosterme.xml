<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸŸ§ SABÄ°T YORUMLAR BAÅžLIÄžI -->
    <TextView
        android:id="@+id/yorumlarBasligi"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Yorumlar"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="16dp"
        android:gravity="center"
        android:background="#FFFFFF" />
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="1.5"
        android:scaleY="1.8"
        android:alpha="0.59"
        android:src="@drawable/kediiiiler"
        android:contentDescription="@null"/>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Yorumlar listesi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/yorumlarRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/bosYorumTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HenÃ¼z yorum yok. Ä°lk yorumu sen yap!"
        android:textColor="#888888"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone"/>

    <!-- Yeni yorum ekleme alanÄ± -->
    <LinearLayout
        android:id="@+id/yorumgndrLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:paddingTop="8dp"
        android:background="@drawable/gonder_kutusu"
        android:elevation="2dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/YrmgndrFotoImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/kullanici"
            android:padding="5dp" />


        <EditText
            android:id="@+id/yorumEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Yorum ekle..."
            android:maxLines="10"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/yorumgonder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:onClick="yorumgonder"
            android:scaleType="fitCenter"
            android:layout_marginBottom="32dp"
            android:src="@drawable/mavipati"
            />
    </LinearLayout>
    <!-- Yeni yorum ekleme alanÄ± -->
    <LinearLayout
        android:id="@+id/yntgndrLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:paddingTop="8dp"
        android:background="@drawable/gonder_kutusu">
        <!-- Bu gÃ¶rÃ¼nmesini istediÄŸiniz Ã¼st kÄ±sÄ±m -->
        <LinearLayout
            android:id="@+id/carpilayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#DADADA"
            >

            <EditText
                android:id="@+id/kimeyanit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="YanÄ±t veriyorsun..."
                android:maxLines="6"
                android:minLines="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/iptalButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="YanÄ±tlamayÄ± iptal et"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/YntgndrFotoImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/kullanici"
                android:padding="5dp" />

            <EditText
                android:id="@+id/yntEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="YanÄ±t ekle..."
                android:maxLines="10"
                android:minLines="1"
                android:padding="8dp"
                android:background="@null"/>


            <ImageButton
                android:id="@+id/yntgonder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:onClick="yntgonder"
                android:scaleType="fitCenter"
                android:src="@drawable/mavipati"

                />
           </LinearLayout>
          </LinearLayout>

       </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

   </FrameLayout>
</LinearLayout>
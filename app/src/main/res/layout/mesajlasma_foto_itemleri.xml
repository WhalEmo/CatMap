<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/fotoCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="18dp"
        card_view:cardElevation="8dp"
        android:layout_margin="24dp"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/imageFullScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#252121"
            android:contentDescription="Tam ekran fotoÄŸraf" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/fotoSayaci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="48dp"
        android:background="@drawable/foto_overlay_label"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:text="1 / 5"
        android:visibility="visible"
        android:elevation="10dp"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#55000000"
        android:backgroundTintMode="src_atop"
        android:letterSpacing="0.05" />
</FrameLayout>

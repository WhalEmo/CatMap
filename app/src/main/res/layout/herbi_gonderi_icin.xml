<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <!-- Fotoğrafların yatay kaydırılması için -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fotoPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal" />

    <!-- Alt bilgi alanı: Kedi ikonu + Haritada Gör + Kedi Adı ve Açıklama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <!-- Kedi simgesi + Haritada Gör -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/fotomrkr"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:translationY="-9dp"
                android:src="@drawable/markerkedy" />

            <TextView
                android:id="@+id/haritadaGorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haritada Gör"
                android:textColor="#0C79AA"
                android:translationY="-20dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Kedi bilgileri -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/kediAdiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kedi Adı"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/kediAciklama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kedi hakkında kısa açıklama"
                android:textColor="#555555"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

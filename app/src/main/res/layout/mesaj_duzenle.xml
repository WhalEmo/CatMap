<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popupMesajDuzenle"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/secenek_menu_background"
    android:padding="16dp"
    android:elevation="6dp">

    <TextView
        android:id="@+id/tvDuzenleBaslik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mesajı Düzenle"
        android:textSize="18sp"
        android:textColor="#262626"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/editYeniMesaj"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Yeni mesajı buraya yazın..."
        android:background="@drawable/bg_edittext"
        android:gravity="top|start"
        android:padding="10dp"
        android:textColor="#262626"
        android:textColorHint="#999999"
        android:maxLines="5"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnIptal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İptal"
            android:textColor="#FFFFFF"
            android:backgroundTint="#888888"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnMesajiKaydet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:strokeColor="#FEDFB1"
            app:strokeWidth="4dp"
            android:text="Kaydet"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FEB8AE" />
    </LinearLayout>
</LinearLayout>
